@model HomeModel
@{
    ViewData["Title"] = "Home Page";
}

<partial name="~/Views/Shared/_Slider.cshtml" />
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        @foreach (var category in Model.Categories.Take(5))
                        {
                            var product = category.Products.FirstOrDefault();
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="img/@product.ProductImage.Split(",").FirstOrDefault()" alt="">
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <a href="@product.ProductUrl" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>

                                <h2><a href="@product.ProductUrl">@product.ProductName</a></h2>

                                <div class="product-carousel-price">
                                    <ins>$@product.ProductPrice.ToString("N2")</ins> @*<del>$800.00</del>*@
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Shared/_Brands.cshtml" />
@await Html.PartialAsync("_TopSeller", Model)

